------------------------------
自动生成类插件
------------------------------
<plugin>
	<groupId>org.jooq</groupId>
	<artifactId>jooq-codegen-maven</artifactId>
	<executions>
		<execution>
			<goals>
				<goal>generate</goal>
			</goals>
		</execution>
	</executions>
	<!-- 配置mysql渠道 -->
	<dependencies>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>${mysql.version}</version>
		</dependency>
	</dependencies>
	<configuration>
		<!-- 
			可以指定配置文件的地址 
			<configurationFile>src/main/resources/jooq/jooq.xml</configurationFile> 
		-->
		<!-- 指定日志级别 -->
		<logging>DEBUG</logging>
		<!-- 
			指定异常发生后的处理逻辑
			FAIL：谁调用谁处理（Maven处理，抛出异常）
			LOG：打印
			SILENT： 忽略
		 -->
		<onError>FAIL</onError>
		<!-- 
			数据库的配置，在某些情况下，不需要配置JDBC连接，例如使用JPADatabase
		-->
		<jdbc>
			<driver>com.mysql.cj.jdbc.Driver</driver>
			<url>jdbc:mysql://localhost:3306/jooq?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=GMT%2b8&amp;allowMultiQueries=true</url>
			<user>root</user>
			<password>root</password>
			<!-- 是否自动提交事务 -->
			<autoCommit>true</autoCommit>
		</jdbc>
		<generator>
			<!-- 指定代码生成器，Generator 的实现 -->
			<name>org.jooq.codegen.JavaGenerator</name>
			<!-- 
				指定生成策略，GeneratorStrategy 的实现
				<strategy></strategy>
			-->
			<database>
				<!-- 指定数据库类型 -->
				<name>org.jooq.meta.mysql.MySQLDatabase</name>
				<!-- 数据库名称/用户 -->
				<inputSchema>jooq</inputSchema>
				<!-- 包含的表，正则表达式 -->
				<includes>.*</includes>
				<!-- 排除的表，正则表达式 -->
				<excludes></excludes>
			</database>
			
			<!-- 生成配置 -->
			<generate>
				<!--生成dao -->
				<daos>true</daos>
				<!-- 生成pojo -->
				<pojos>true</pojos>
				<!--把数据库时间类型映射到java 8时间类型 -->
				<javaTimeTypes>true</javaTimeTypes>
				<!-- 生成接口 -->
				<interfaces>true</interfaces>
				<!--是否生成spring注释，比如@Repository -->
				<springAnnotations>true</springAnnotations>
			</generate>
			
			<!-- 生成目录配置 -->
			<target>
				<!-- 是否清空目录 -->
				<clean>true</clean>
				<!-- 编码 -->
				<encoding>utf-8</encoding>
				<!-- 生成的包名 -->
				<packageName>io.springboot.jooq.generated</packageName>
				<!-- 生成的目标目录 -->
				<directory>src/main/java</directory>
			</target>
		</generator>
	</configuration>
</plugin>